<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RodoApp" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/green_1a3036</item>
        <item name="colorPrimaryVariant">@color/green_1a3036</item>
        <item name="colorOnPrimary">@color/green_00cc66</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/default_bg</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/green_1a3036</item>
        <item name="actionBarStyle">@style/ActionBarTheme</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorAccent">@color/green_00cc66</item><!-- progressbar loading color -->

    </style>

    <style name="Theme.Home" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green_1a3036</item>
        <item name="colorPrimaryVariant">@color/green_1a3036</item>
        <item name="colorOnPrimary">@color/green_00cc66</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/green_1a3036</item>
    </style>

    <style name="ActionBarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/default_bg</item>
        <item name="backgroundStacked">@color/default_bg</item>
        <item name="backgroundSplit">@color/default_bg</item>
        <item name="titleTextStyle">@style/ActionBarTitle</item>
    </style>

    <style name="ActionBarTitle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:textColor">@color/green_1a3036</item>
    </style>

    <style name="ActionBarTitleText">
        <item name="android:textColor">@color/green_1a3036</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNav" parent="Widget.Design.BottomNavigationView">
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

</resources>